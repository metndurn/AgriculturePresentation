@using EntityLayer.Concrete
@model List<Image>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Resim Galerisi</h4>
            <div class="table-responsive">
                @if (Model.Count != 0)
                {
                    <table class="table table-striped">
                        <thead>
                            <tr class="border-danger">
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Sil</th>
                                <th>Guncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="py-1"><img src="@item.ImageUrl" alt="image" /></td>
                                    <td>@item.Title</td>
                                    <td><a href="/Image/DeleteImage/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Image/UpdateImage/@item.Id" class="btn btn-outline-warning">Guncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-danger" role="alert">
                        <strong>UYARI!</strong> Takim Listesi Boş!
                    </div>
                    <div class="alert alert-warning" role="alert">
                        <strong>UYARI!</strong> Takim Üyesi Ekleyin!
                    </div>
                }
            </div>
            <br />
            <a href="/Image/AddImage" class="btn btn-outline-info">Yeni Görsel Ekle</a>
        </div>
    </div>
</div>


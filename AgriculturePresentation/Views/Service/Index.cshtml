@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";//_adminLayout ekledik 
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmet Listesi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Baslik</th>
                            <th>Sil</th>
                            <th>Guncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                       @foreach(var item in Model)
                       {
                          <tr>
                              <td>@item.Id</td>
                              <td>@item.Title</td>
                              <td><a href="/Service/DeleteService/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                              <td><a href="/Service/UpdateService/@item.Id" class="btn btn-outline-warning">Guncelle</a></td>
                          </tr>
                       }
                    </tbody>
                </table>
                <br />
                <a href="/Service/AddService" class="btn btn-outline-info">Yeni Hizmet Ekle</a>
            </div>
        </div>
    </div>
</div>
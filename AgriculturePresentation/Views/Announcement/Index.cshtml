@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular Listesi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Baslik</th>
                            <th>Açiklama</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Guncelle</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>@item.Date</td>
                                <td>
                                    <a href="/Announcement/DeleteAnnouncement/@item.Id" class="btn btn-outline-danger">Sil</a>
                                </td>
                                <td>
                                    <a href="/Announcement/UpdateAnnouncement/@item.Id" class="btn btn-outline-success">Guncelle</a>
                                </td>
                               @if (item.Status == true)
                               {
                                    <td>
                                        <a href="/Announcement/AnnouncementStatusToTrue/@item.Id" class="btn btn-outline-warning">Aktif Yap</a> 
                                    </td>
                               }
                               else
                               {
                                    <td>
                                        <a href="/Announcement/AnnouncementStatusToFalse/@item.Id" class="btn btn-outline-secondary">Pasif Yap</a>
                                    </td>
                               }
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Announcement/AddAnnouncement" class="btn btn-outline-info">Yeni Duyuru Ekle</a>
            </div>
        </div>
    </div>
</div>
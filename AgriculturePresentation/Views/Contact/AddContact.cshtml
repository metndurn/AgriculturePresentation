@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "AddContact";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Mesaj Ekleme Kaydi</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Adi Soyadi</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="adsoyad" asp-for="Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Email" asp-for="Email">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Tarih</label>
                    <span asp-validation-for="Date" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Gorsel" asp-for="Date">
                </div>
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
            </form>
        </div>
    </div>
</div>

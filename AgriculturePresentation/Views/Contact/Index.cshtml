@using EntityLayer.Concrete
@model List<Contact>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Listesi</h4>
            <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr class="border-danger">
                                <th>#</th>
                                <th>Ad Soyad</th>
                                <th>Email</th>
                                <th>Tarih</th>
                                <th>Mesajı Gör</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    <td>@item.Date</td>
                                    <td><a href="/Contact/MessageDetails/@item.Id" class="btn btn-outline-primary">Mesajı Gör</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                <br />
                <a href="/Contact/AddContact" class="btn btn-outline-info">Yeni Mesaj Ekle</a>
            </div>
        </div>
    </div>
</div>

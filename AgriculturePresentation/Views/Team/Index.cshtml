@using EntityLayer.Concrete
@model List<Team>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Takim Listesi</h4>
            <div class="table-responsive">
                @if (Model.Count != 0)
                {
                    <table class="table table-striped">
                        <thead>
                            <tr class="border-danger">
                                <th>#</th>
                                <th>Resim</th>
                                <th>Ad</th>
                                <th>Gorev</th>
                                <th>Instagram</th>
                                <th>Twitter</th>
                                <th>Facebook</th>
                                <th>Web Site</th>
                                <th>Sil</th>
                                <th>Guncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td class="py-1"><img src="@item.ImageUrl" alt="image"/></td>
                                    <td>@item.PersonelName</td>
                                    <td>@item.Title</td>
                                    <td>@item.InstagramUrl</td>
                                    <td>@item.Twitter</td>
                                    <td>@item.FacebookUrl</td>
                                    <td>@item.WebsiteUrl</td>
                                    <td><a href="/Team/DeleteTeam/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Team/UpdateTeam/@item.Id" class="btn btn-outline-warning">Guncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-danger" role="alert"> 
                        <strong>UYARI!</strong> Takim Listesi Boş!
                    </div>
                    <div class="alert alert-warning" role="alert">
                        <strong>UYARI!</strong> Takim Üyesi Ekleyin!
                    </div>
                }
            </div>
            <br/>
            <a href="/Team/AddTeam" class="btn btn-outline-info">Yeni Personel Ekle</a>
        </div>
    </div>
</div>

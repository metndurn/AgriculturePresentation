@model EntityLayer.Concrete.Team
@{
    ViewData["Title"] = "UpdateTeam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Takim Arkadasi Bilgi Güncelleme Sayfasi</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    @Html.HiddenFor(x => x.Id)
                    <label for="exampleInputName1">Adi Soyadi</label>
                    <span asp-validation-for="PersonelName" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="adsoyad" asp-for="PersonelName">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Gorev</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Gorev" asp-for="Title">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Resim</label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Gorsel" asp-for="ImageUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Instagram</label>
                    <input type="text" class="form-control" placeholder="Instagram" asp-for="InstagramUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Twitter</label>
                    <input type="text" class="form-control" placeholder="Twitter" asp-for="Twitter">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Facebook</label>
                    <input type="text" class="form-control" placeholder="Facebook" asp-for="FacebookUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Web Site</label>
                    <input type="text" class="form-control" placeholder="Web Site" asp-for="WebsiteUrl">
                </div>

                <button type="submit" class="btn btn-outline-info">Kaydet</button>
            </form>
        </div>
    </div>
</div>


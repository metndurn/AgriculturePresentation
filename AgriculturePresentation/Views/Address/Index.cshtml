@using EntityLayer.Concrete
@model List<Address>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Adres Listesi</h4>
            <div class="table-responsive">
                @if (Model.Count != 0)
                {
                    <table class="table table-striped">
                        <thead>
                            <tr class="border-danger">
                                <th>Açıklama 1</th>
                                <th>Açıklama 2</th>
                                <th>Açıklama 3</th>
                                <th>Açıklama 4</th>
                                <th>Guncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Description1</td>
                                    <td>@item.Description2</td>
                                    <td>@item.Description3</td>
                                    <td>@item.Description4</td>
                                    <td><a href="/Address/UpdateAddress/@item.Id" class="btn btn-outline-warning">Guncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-danger" role="alert">
                        <strong>UYARI!</strong> Adres Listesi Boş!
                    </div>
                    <div class="alert alert-warning" role="alert">
                        <strong>UYARI!</strong> Adres Ekleyin!
                    </div>
                }
            </div>
            <br />
            <a href="/Address/AddAddress" class="btn btn-outline-info">Yeni Adres Ekle</a>
        </div>
    </div>
</div>

